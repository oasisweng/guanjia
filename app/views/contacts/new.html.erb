<% provide(:title, '添加新地址') %>
<h1>添加新地址</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@user,@user.contacts.build]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :full_name, "姓名" %>
      <%= f.text_field :full_name, :value => @user.full_name, class: 'form-control' %>
      <br>
      <%= f.label :male, "称呼"%>
      <%= f.radio_button :male, 1, checked: @user.male, class: 'form-control' %>
      <%= f.label :male, "先生", :value => true %>
      <%= f.radio_button :male, 0, checked: !@user.male, class: 'form-control' %>
      <%= f.label :male, "女士", :value => false %>
      <br>
      <%= f.label :phone_no, "电话号码" %>
      <%= f.text_field :phone_no, :value => @user.phone_no, class: 'form-control' %>
      <br>
      <%= f.label :address, "地址" %>
      <%= f.text_field :address, class: 'form-control' %>
      <br>
      <%= f.submit "Add new contact", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
